<?xml version="1.0"?>
<config>
  <modules>
    <Pk_Vendor>
      <version>0.1.0</version>
    </Pk_Vendor>
  </modules>
  <frontend>
    <routers>
      <vendor>
        <use>standard</use>
          <args>
            <module>Pk_Vendor</module>
            <frontName>vendor</frontName>
          </args>
      </vendor>
    </routers>
		<layout>
		  <updates>
			<vendor>
			  <file>vendor.xml</file>
			</vendor>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <vendor>
        <class>Pk_Vendor_Helper</class>
      </vendor>
    </helpers>
	<blocks>
	  <vendor>
		<class>Pk_Vendor_Block</class>
	  </vendor>
	</blocks>
	<models>
	  <vendor>
		<class>Pk_Vendor_Model</class>
		<resourceModel>vendor_mysql4</resourceModel>
	  </vendor>
	  <vendor_mysql4>
		<class>Pk_Vendor_Model_Mysql4</class>
		<entities>		  
			  <vendor>
				<table>vendor_register</table>
			  </vendor>
        </entities>
	  </vendor_mysql4>
	</models>
	<resources>
	  <vendor_setup>
		<setup>
		  <module>Pk_Vendor</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </vendor_setup>
	  <vendor_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </vendor_write>
	  <vendor_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </vendor_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <vendor>
	    <use>admin</use>
		<args>
		  <module>Pk_Vendor</module>
		  <frontName>admin_vendor</frontName>
		</args>
	  </vendor>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <vendor module="vendor">
		<title>Vendor</title>
		<sort_order>100</sort_order>
		<children>
		  <vendor module="vendor">
		    <title>Manage Vendor</title>
			<sort_order>0</sort_order>
			<action>admin_vendor/adminhtml_vendor</action>
		  </vendor>
		</children>
	  </vendor>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<vendor translate="title" module="vendor">
			  <title>Vendor</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <vendor translate="title">
			<title>Manage Vendor</title>
			<sort_order>0</sort_order>
		  </vendor>
			  </children>
			</vendor>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<vendor>
		  <file>vendor.xml</file>
		</vendor>
	  </updates>
	</layout>
  </adminhtml>
</config> 